- provide(:title, "Roster")

%h1 Roster

%h3 Students

=link_to "Export CSV", users_path(:format => :csv)

= form_tag import_users_path, multipart: true do
  = file_field_tag :file
  = submit_tag "Import"

%table#students-table
  %thead
    %tr
      %th Username
      %th Email
      %th Actions

  %tbody
    - @users.select{ |user| not user.is_instructor? }.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td
          = link_to 'Show', user

%h3 Instructors

%table#instructors-table
  %thead
    %tr
      %th Username
      %th Email
      %th Actions

  %tbody
    - @users.select{ |user| user.is_instructor? }.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td
          = link_to 'Show', user
