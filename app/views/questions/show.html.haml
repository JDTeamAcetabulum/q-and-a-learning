%p#notice= notice
%p
  %b Created by:
  = get_user(@question.user_id).username
  %h2 Question:
  %p
    = @question.content
  %h2 Answers:
  = form_tag submit_question_url do
    - @question.answers.each.with_index do |a,i|
      = label_tag a.content
      = radio_button_tag :answer, "value", id: i
    %br
    = submit_tag 'submit'


= link_to 'Edit', edit_question_path(@question)
\|
= link_to 'Back', questions_path
